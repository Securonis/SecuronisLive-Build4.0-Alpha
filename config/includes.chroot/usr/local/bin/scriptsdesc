#!/bin/bash

# scriptdesc - Descriptions of Securonis Linux tools (updated)

declare -A descriptions=(
  [about]="Provides information about Securonis Linux."
  [antimitm]="Detects and defends against man-in-the-middle attacks."
  [changedns]="Script for changing DNS servers."
  [changehostname]="Changes the system hostname."
  [controlpanelgui]="System control panel with graphical interface."
  [datadestroyer]="Permanently and securely deletes data."
  [delete]="Securely deletes specified files or directories."
  [dnschanger]="GUI-based DNS changer tool."
  [donate]="Options to donate to the Securonis project."
  [filemanagement]="Script for managing files and directories."
  [i2p-routermenu]="Graphical configuration menu for I2P router."
  [i2p-routermenucli]="Command line interface for I2P router."
  [info]="Links to Securonis wiki."
  [ipcheck]="Displays your IP address and connection details."
  [livesettings]="Changes keyboard settings in live mode."
  [metadatacleaner]="Cleans metadata from files."
  [nevermore]="Secure disk wiping tool."
  [notesgui]="Allows taking encrypted notes."
  [nuke2system]="Destroys the system irreversibly."
  [nvidia-driver-guide]="Guide for NVIDIA driver installation."
  [openmammoth]="Powerful network defense tool."
  [onionchecker]="Graphically displays Tor onion services."
  [paranoia]="Isolates the system by blocking network and hardening kernel."
  [passmanager]="Password management tool."
  [physicalsec]="Physical security mode."
  [pxrtalcrypt]="File encryption toolkit."
  [quick-usbkitgui]="GUI tool for USB management."
  [securonisdnscrypt]="Script facilitating DNSCrypt usage."
  [scriptsdesc]="Script explaining the purpose of all tools."
  [systemknight]="Tool for system security scanning and management."
  [speedtest]="Internet speed testing tool."
  [system-manager]="GUI tool for system info and updates."
  [systemrescuekit]="System rescue tools package."
  [torifycheck]="Checks if traffic is routed through the Tor network."
  [update]="Securonis system update script."
  [usbguardmanager]="Usbguard management tool."
  [vesperacrypt]="Simple file encryption tool."
  [wizard]="Simple trace removal tool."
  [Moneronis]="CLI Menu for Monero."
  [anonboot-manager]="Hostname randomizer service."
)

echo "Securonis Linux Tools Descriptions"
echo "----------------------------------"
for tool in "${!descriptions[@]}"; do
  printf "%-20s: %s\n" "$tool" "${descriptions[$tool]}"
done
